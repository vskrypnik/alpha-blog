<% if @article.errors.any? %>
<h2> You've made one of this mistakes: </h2>
<ul>
  <% @article.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>
<% end %>



<div class="row justify-content-center mt-5">
  <div class="col-6">
    <%= form_for @article do |f| %>
      <div class="form-group row">
        <%= f.label :title, class: "col-sm-2 col-form-label" %>

        <div class="col-sm-10">
          <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :description, class: "col-sm-2 col-form-label" %>

        <div class="col">
          <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of article" %>
        </div>
      </div>

      <div class="form-group text-center mt-5">
        <%= f.submit class: 'btn btn-outline-secondary btn-lg' %>
      </div>

      <% end %>

      <div class="text-center mt-5">
        <%= link_to "[ Cancel request and return to all articles ]", articles_path, class: "text-muted" %>
      </div>
    </div>
  </div>
</div>
