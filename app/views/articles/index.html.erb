<h1 class="text-center mt-3 text-secondary"> All Articles </h1>

<% @articles.each do |article| %>
  <div class="row justify-content-center mt-5">
    <div class="col-6" id='all_articles'>
      <div class="well well-lg text-center" >
        <div class='article_title mt-4'>
          <%= link_to article.title, article_path(article) %>
        </div>
        <div class='article_body mt-3 mb-4'>
          <%= truncate(article.description, length: 50) %>
        </div>
      </div>

      <div class="container text-center">
        <div class="row mb-4">
          <div class="col-sm">
            <%= link_to "Open", article_path(article), class: "btn btn-outline-secondary" %>
          </div>
          <div class="col-sm">
            <%= link_to "Edit", edit_article_path(article), class: "btn btn-outline-secondary" %>
          </div>
          <div class="col-sm">
            <%= link_to "Delete", article_path(article), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-secondary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
