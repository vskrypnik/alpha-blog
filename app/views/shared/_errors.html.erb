<% if obj.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <h2 class="alert-heading"> <%= pluralize(obj.errors.count, "error") %>
      prohibited this article from being saved: </h2>
    <hr>
    <ul>
      <% obj.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
